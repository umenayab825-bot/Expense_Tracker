<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#1F1F1F">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <View
        android:id="@+id/iconIndicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:background="@drawable/vertical_icon_removebg_preview"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iconIndicator"
        android:text="Grocery Shopping"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/> <TextView
    android:id="@+id/txtCategory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/iconIndicator"
    android:layout_below="@id/txtTitle"
    android:text="Food"
    android:textSize="12sp"
    android:textColor="@android:color/holo_blue_light"/> <TextView
    android:id="@+id/txtDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:text="20-12-2023"
    android:textSize="12sp"
    android:layout_alignTop="@id/txtCategory"
    android:textColor="@android:color/darker_gray"/> <TextView
    android:id="@+id/txtAmount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:text="Rs. -500.00"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_alignTop="@id/txtTitle"
    android:textColor="@android:color/holo_red_light"/> </RelativeLayout>
</androidx.cardview.widget.CardView>